<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script type="text/javascript">
// I used Two functions here.  Starter idea at:
// https://codepen.io/ColleenEMc/pen/XmZzWw
function showImage(img){
	var box = document.getElementById('image');
	//var t = document.getElementsByClassName('preview')
	box.style.backgroundImage = "url(" + img.src + ")";
	box.innerText = img.alt;
	//t.style.display = none;
	$(".preview").css("visibility","hidden");
	//box.innerHTML = '<strong>' + img.alt + "</strong>";
}
function hideImage(){
	var box = document.getElementById('image');
	box.style.backgroundImage = null;
	box.innerText = 'Hover over an image below';
	$('.preview').css("visibility","visible")
}
</script>
